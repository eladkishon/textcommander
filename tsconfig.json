{
    "compilerOptions": {
      "module": "es2022",  // Or 'esnext', 'node16'
      "target": "es2020",   // Or 'esnext'
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames":false,
      "skipLibCheck": true,
      "strict": true,
      
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*",           // Include all files in the project
      "bot/**/*",           // You may want to include bot and platform files explicitly
      "platform/**/*",
      "shared/**/*"
    ]
  }
  